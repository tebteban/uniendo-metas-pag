                <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
                <script>
                    // INIT AOS
                    AOS.init({ once: true, offset: 50, duration: 800 });

                    // COUNTERS LOGIC
                    document.addEventListener('DOMContentLoaded', () => {
                        const counters = document.querySelectorAll('.counter-animate');
                        if (counters.length > 0) {
                            const animateCounters = () => {
                                counters.forEach(counter => {
                                    const target = +counter.getAttribute('data-target');
                                    const duration = 2000;
                                    const increment = target / (duration / 16);

                                    let current = 0;
                                    const updateCount = () => {
                                        current += increment;
                                        if (current < target) {
                                            counter.innerText = Math.ceil(current);
                                            requestAnimationFrame(updateCount);
                                        } else {
                                            counter.innerText = target;
                                        }
                                    };
                                    updateCount();
                                });
                            };

                            const observer = new IntersectionObserver((entries) => {
                                entries.forEach(entry => {
                                    if (entry.isIntersecting) {
                                        animateCounters();
                                        observer.disconnect();
                                    }
                                });
                            }, { threshold: 0.5 });

                            observer.observe(counters[0].closest('div'));
                        }

                        // COUNTDOWN LOGIC
                        const countdownContainer = document.getElementById('countdown-container');
                        if (countdownContainer) {
                            const eventDateStr = countdownContainer.getAttribute('data-date');
                            if (eventDateStr) {
                                const eventDate = new Date(eventDateStr).getTime();

                                const updateCountdown = () => {
                                    const now = new Date().getTime();
                                    const distance = eventDate - now;

                                    if (distance < 0) {
                                        // Event passed
                                        document.getElementById('cd-months').innerText = "00";
                                        document.getElementById('cd-days').innerText = "00";
                                        document.getElementById('cd-hours').innerText = "00";
                                        return;
                                    }

                                    // Time calculations
                                    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                                    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));

                                    // Approximation for months (simplified)
                                    const months = Math.floor(days / 30);
                                    const remainingDays = days % 30;

                                    document.getElementById('cd-months').innerText = months < 10 ? "0" + months : months;
                                    document.getElementById('cd-days').innerText = remainingDays < 10 ? "0" + remainingDays : remainingDays;
                                    document.getElementById('cd-hours').innerText = hours < 10 ? "0" + hours : hours;
                                };

                                setInterval(updateCountdown, 1000);
                                updateCountdown();
                            }
                        }

                        // MOBILE MENU (Logic handled in navbar.ejs)
                        // Removed duplicate script to prevent toggle conflict
                    });

                    // MODAL LOGIC
