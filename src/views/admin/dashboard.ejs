                                <h3 class="text-gray-500 text-sm font-bold uppercase tracking-wider">Colegios</h3>
                                <p class="text-4xl font-black text-slate-900 mt-2">
                                    <%= metrics.schools %>
                                </p>
                            </div>

                        </div>
                </main>
        </div>

