        <button id="mobile-menu-btn" class="md:hidden text-gray-500 hover:text-slate-800 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
        <span class="font-black text-xl text-slate-800 tracking-tight">ADMIN PANEL</span>
