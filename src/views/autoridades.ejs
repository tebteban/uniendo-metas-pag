                <!-- Scripts -->
                <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
                <script>
                    AOS.init({ once: true, offset: 50, duration: 800 });

                    // --- L√ìGICA LIGHTBOX (Galer√≠a) ---
                    const lightbox = document.getElementById('lightbox');
                    const lightboxImg = document.getElementById('lightbox-img');
                    // Seleccionamos todas las im√°genes de la galer√≠a para crear una lista navegable
                    const lightboxImages = Array.from(document.querySelectorAll('.lightbox-trigger'));
                    let currentIndex = 0;

                    // Abrir Lightbox al hacer click en una imagen
                    lightboxImages.forEach((img, index) => {
                        img.addEventListener('click', e => {
                            e.stopPropagation();
                            currentIndex = index;
                            updateLightboxImage();
                            lightbox.classList.remove('hidden');
                            setTimeout(() => lightboxImg.classList.replace('scale-95', 'scale-100'), 10);
                        });
                    });

                    // Actualizar la imagen mostrada seg√∫n el √≠ndice actual
                    function updateLightboxImage() {
                        lightboxImg.src = lightboxImages[currentIndex].src;
                    }

                    // Navegar a la siguiente imagen
                    function nextImage(e) {
                        if (e) e.stopPropagation();
                        currentIndex = (currentIndex + 1) % lightboxImages.length; // Ciclo infinito
                        updateLightboxImage();
                    }

                    // Navegar a la imagen anterior
                    function prevImage(e) {
                        if (e) e.stopPropagation();
                        currentIndex = (currentIndex - 1 + lightboxImages.length) % lightboxImages.length; // Ciclo infinito inverso
                        updateLightboxImage();
                    }

                    // Cerrar Lightbox
                    function closeLightbox() {
                        lightboxImg.classList.replace('scale-100', 'scale-95');
                        setTimeout(() => lightbox.classList.add('hidden'), 200);
                    }

                    // Event Listeners para los botones de flecha
                    if (document.getElementById('lightbox-next')) document.getElementById('lightbox-next').addEventListener('click', nextImage);
                    if (document.getElementById('lightbox-prev')) document.getElementById('lightbox-prev').addEventListener('click', prevImage);

                    // Control con Teclado (Flechas y Escape)
                    document.addEventListener('keydown', e => {
                        if (!lightbox.classList.contains('hidden')) {
                            if (e.key === 'Escape') closeLightbox();
                            if (e.key === 'ArrowRight') nextImage();
                            if (e.key === 'ArrowLeft') prevImage();
                        }
                    });
                </script>
