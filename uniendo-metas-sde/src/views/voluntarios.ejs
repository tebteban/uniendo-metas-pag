    <% 
    // Tarjeta Jefe
    function leaderCard(name, role, img, color) {
        let bgClass = 'bg-slate-100';
        let textClass = 'text-slate-900';
        if(color === 'blue') { bgClass = 'bg-brand-blue'; textClass = 'text-white'; }
        if(color === 'red') { bgClass = 'bg-brand-red'; textClass = 'text-white'; }
        if(color === 'green') { bgClass = 'bg-brand-green'; textClass = 'text-white'; }
        if(color === 'yellow') { bgClass = 'bg-brand-yellow'; textClass = 'text-slate-900'; }
        if(color === 'purple') { bgClass = 'bg-purple-600'; textClass = 'text-white'; }
        if(color === 'pink') { bgClass = 'bg-pink-500'; textClass = 'text-white'; }

        return `
        <div class="col-span-1 md:col-span-2 relative h-64 rounded-[2rem] overflow-hidden shadow-xl group cursor-pointer">
            <img src="/img/equipo/${img}" 
                 onerror="this.src='https://ui-avatars.com/api/?name=${name}&size=400&background=random'" 
                 class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
                 alt="${name}">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
            <div class="absolute bottom-0 left-0 p-8">
                <span class="${bgClass} ${textClass} text-[10px] font-black uppercase tracking-widest px-3 py-1 rounded-full mb-2 inline-block shadow-md">
                    ${role}
                </span>
                <h4 class="text-3xl font-black text-white leading-none">${name}</h4>
            </div>
        </div>
        `;
    }

    // Tarjeta Staff (Minimalista y Pro)
    function memberCard(name, role, img) {
        return `
        <div class="bg-white rounded-[2rem] p-3 border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
            <div class="aspect-square rounded-[1.5rem] overflow-hidden mb-4 bg-gray-100 relative">
                <img src="/img/equipo/${img}" 
                     onerror="this.src='https://ui-avatars.com/api/?name=${name}&size=300&background=f1f5f9&color=334155'" 
                     class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500" 
                     alt="${name}">
            </div>
            <div class="px-2 pb-2 text-center">
                <h4 class="font-bold text-slate-800 leading-tight text-lg mb-1">${name}</h4>
                <p class="text-xs font-bold text-gray-400 uppercase tracking-wider">${role}</p>
            </div>
        </div>
        `;
    }
    %>

