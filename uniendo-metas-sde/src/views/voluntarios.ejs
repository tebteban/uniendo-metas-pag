    <% 
    function card(name, role, img, color) {
        let badgeColor = 'bg-gray-100 text-gray-500';
        
        if(color === 'green') { badgeColor = 'bg-brand-green text-white'; } 
        if(color === 'orange') { badgeColor = 'bg-orange-500 text-white'; } 
        if(color === 'sky') { badgeColor = 'bg-sky-500 text-white'; } 
        if(color === 'yellow') { badgeColor = 'bg-brand-yellow text-slate-900'; } 
        if(color === 'bordo') { badgeColor = 'bg-rose-900 text-white'; } 
        if(color === 'purple') { badgeColor = 'bg-purple-600 text-white'; } 
        if(color === 'slate') { badgeColor = 'bg-slate-800 text-white'; } 
        if(color === 'gray') { badgeColor = 'bg-gray-200 text-gray-600'; }

        return `
        <div class="flex flex-col items-center text-center group w-40 md:w-44">
            <div class="w-32 h-32 md:w-36 md:h-36 rounded-full overflow-hidden shadow-sm border border-gray-100 mb-3 relative">
                <img src="/img/Voluntarios/${img}"
                     onerror="this.src='https://ui-avatars.com/api/?name=${name}&background=f8fafc&color=64748b&size=300'" 
                     class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" 
                     alt="${name}">
            </div>
            <h4 class="font-bold text-slate-800 leading-tight text-sm md:text-base mb-1.5">${name}</h4>
            <span class="inline-block ${badgeColor} text-[10px] font-bold uppercase tracking-wider px-3 py-0.5 rounded-full shadow-sm">${role}</span>
        </div>
        `;
    }
    %>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true, offset: 50, duration: 800 });

        // Script para buscar voluntarios
        const searchInput = document.getElementById('search-volunteer');
        if(searchInput) {
            searchInput.addEventListener('input', (e) => {
                const term = e.target.value.toLowerCase();
                const names = document.querySelectorAll('.volunteer-name');

                names.forEach(nameEl => {
                    const name = nameEl.textContent.toLowerCase();
                    if(name.includes(term) && term !== '') {
                        nameEl.classList.add('text-brand-red', 'font-bold');
                        nameEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    } else {
                        nameEl.classList.remove('text-brand-red', 'font-bold');
                    }
                });
            });
        }
    </script>
