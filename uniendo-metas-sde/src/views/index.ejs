            <div class="h-1 w-20 bg-brand-blue mx-auto mt-4 rounded-full"></div>
            <p class="text-gray-500 mt-4 text-lg">El camino hacia el modelo.</p>
        </div>

        <div class="relative" data-aos="fade-up">
            
            <div class="hidden md:block absolute top-1/2 left-0 w-full h-1 bg-gray-100 -translate-y-1/2 z-0"></div>

            <div id="scroll-container" class="flex overflow-x-auto pb-12 gap-8 md:gap-12 snap-x snap-mandatory hide-scrollbar py-10 px-4 scroll-smooth">
                
                <% if (cronograma && cronograma.length > 0) { %>
                    <% 
                       let todasLasActividades = [];
                       cronograma.forEach(mes => {
                           mes.actividades.forEach(act => {
                               act.mesNombre = mes.dia.split(':')[0]; 
                               todasLasActividades.push(act);
                           });
                       });
                       
                       // Banderas para marcar solo el PRIMER evento de cada tipo
                       let firstCap = true;
                       let firstMod = true;
                       let firstExa = true;
                       let firstGen = true;
                    %>

                    <% todasLasActividades.forEach((actividad, index) => { %>
                        <% 
                            let cardBorderColor = 'border-gray-200';
                            let dotColor = 'bg-gray-400';
                            let targetId = ''; 
                            
                            if(actividad.tipo === 'modelo') { 
                                dotColor = 'bg-brand-red'; 
                                cardBorderColor = 'border-brand-red';
                                if(firstMod) { targetId = 'target-modelo'; firstMod = false; }

                            } else if(actividad.tipo === 'capacitacion') { 
                                dotColor = 'bg-brand-blue'; 
                                cardBorderColor = 'border-brand-blue';
                                if(firstCap) { targetId = 'target-capacitacion'; firstCap = false; }

                            } else if(actividad.tipo === 'examen' || actividad.tipo === 'especial') { 
                                dotColor = 'bg-brand-yellow'; 
                                cardBorderColor = 'border-brand-yellow';
                                if(firstExa) { targetId = 'target-examen'; firstExa = false; }

                            } else if(actividad.tipo === 'general') { 
                                dotColor = 'bg-brand-green'; 
                                cardBorderColor = 'border-brand-green';
                                if(firstGen) { targetId = 'target-general'; firstGen = false; }
                            }
                        %>

                        <div id="<%= targetId %>" class="relative flex-shrink-0 w-72 md:w-80 snap-center flex flex-col items-center group">
                            <div class="w-6 h-6 rounded-full border-4 border-white shadow-md z-10 mb-6 transition-transform transform group-hover:scale-125 <%= dotColor %>"></div>
                            <div class="w-full bg-white p-6 rounded-2xl shadow-lg border border-gray-100 border-t-4 <%= cardBorderColor %> hover:shadow-xl transition-shadow duration-300">
                                <div class="flex justify-between items-center mb-3">
                                    <span class="text-xs font-bold uppercase tracking-wider text-gray-400">
                                        <%= actividad.mesNombre %>
                                    </span>
                                    <span class="bg-gray-100 text-gray-600 text-xs font-bold px-2 py-1 rounded-md">
                                        <%= actividad.fecha %>
                                    </span>
                                </div>
                                <h3 class="text-lg font-bold text-gray-900 mb-2 leading-snug">
                                    <%= actividad.titulo %>
                                </h3>
                                <% if (actividad.lugar) { %>
                                    <div class="flex items-start gap-2 mt-3 text-sm text-gray-500">
                                        <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                                        <span><%= actividad.lugar %></span>
                                    </div>
                                <% } %>
                            </div>
                            <div class="md:hidden absolute top-6 bottom-0 w-0.5 bg-gray-100 -z-10"></div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="w-full text-center text-gray-500">Cronograma a confirmar.</p>
                <% } %>
                <div class="w-4 flex-shrink-0"></div>
            </div>
        </div>

        <div class="mt-8 flex flex-wrap justify-center gap-4 md:gap-8 text-xs text-gray-500 font-medium">
            <button onclick="scrollToEvent('target-capacitacion')" class="flex items-center gap-2 hover:bg-gray-100 px-3 py-1.5 rounded-full transition-colors cursor-pointer group">
                <span class="w-3 h-3 rounded-full bg-brand-blue group-hover:scale-125 transition-transform"></span> 
                Capacitaciones
            </button>
            
            <button onclick="scrollToEvent('target-modelo')" class="flex items-center gap-2 hover:bg-gray-100 px-3 py-1.5 rounded-full transition-colors cursor-pointer group">
                <span class="w-3 h-3 rounded-full bg-brand-red group-hover:scale-125 transition-transform"></span> 
                Modelo Oficial
            </button>
            
            <button onclick="scrollToEvent('target-examen')" class="flex items-center gap-2 hover:bg-gray-100 px-3 py-1.5 rounded-full transition-colors cursor-pointer group">
                <span class="w-3 h-3 rounded-full bg-brand-yellow group-hover:scale-125 transition-transform"></span> 
                Ex√°menes/Sorteos
            </button>
            
            <button onclick="scrollToEvent('target-general')" class="flex items-center gap-2 hover:bg-gray-100 px-3 py-1.5 rounded-full transition-colors cursor-pointer group">
                <span class="w-3 h-3 rounded-full bg-brand-green group-hover:scale-125 transition-transform"></span> 
                General
            </button>
        </div>
    </div>
</section>

<script>
    function scrollToEvent(elementId) {
        const container = document.getElementById('scroll-container');
        const target = document.getElementById(elementId);
        
        if (container && target) {
            const scrollLeft = target.offsetLeft - container.offsetLeft - 20;
            container.scrollTo({
                left: scrollLeft,
                behavior: 'smooth'
            });
        }
    }
</script>

