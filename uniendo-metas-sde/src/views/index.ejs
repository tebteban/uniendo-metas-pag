    <script>
        // Funci√≥n para ABRIR cualquier modal por su ID
        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.remove('hidden');
                // Bloquear el scroll del cuerpo para que no se mueva el fondo
                document.body.style.overflow = 'hidden';
            } else {
                console.error('No se encontr√≥ el modal con ID:', modalId);
            }
        }

        // Funci√≥n para CERRAR cualquier modal por su ID
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.add('hidden');
                // Reactivar el scroll del cuerpo
                document.body.style.overflow = 'auto';
            }
        }

        // Cerrar modal al presionar la tecla ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                // Cierra todos los modales posibles
                const modales = document.querySelectorAll('[id^="modal-"]');
                modales.forEach(modal => {
                    if (!modal.classList.contains('hidden')) {
                        modal.classList.add('hidden');
                        document.body.style.overflow = 'auto';
                    }
                });
            }
        });
    </script>

